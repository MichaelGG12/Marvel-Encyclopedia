@page "{selectedOption}/{id}"
@model MarvelApp.Pages.ViewModel
@{
    ViewData["Title"] = @Model.SearchResult.Data.Results[0].Name + " - ";
}

<div class="container mt-5 mb-5">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="card border-0 p-3 shadow">
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.SearchResult.Data.Results[0].Name))
                    {
                        <h3 class="card-title text-center">@Model.SearchResult.Data.Results[0].Name</h3>
                    }
                    else if (!string.IsNullOrEmpty(Model.SearchResult.Data.Results[0].Title))
                    {
                        <h3 class="card-title text-center">@Model.SearchResult.Data.Results[0].Title</h3>
                    }
                    else
                    {
                        <h3 class="card-title text-center">@Model.SearchResult.Data.Results[0].FullName</h3>
                    }
                    <div class="col-md-6">
                        <div class="text-center p-4">
                            @if (Model.SearchResult.Data.Results[0].Thumbnail != null)
                            {
                                <img src="@($"{@Model.SearchResult.Data.Results[0].Thumbnail.Path}.{@Model.SearchResult.Data.Results[0].Thumbnail.Extension}")" class="card-img-top"
                                    style="object-fit: cover; height: 300px">
                            }
                            else
                            {
                                <p class="card-text">No data available to display</p>
                            }
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="p-4">
                            <div class="mt-4 mb-3 ml-1">
                                <h5 class="card-title">Description</h5>
                                @if (!string.IsNullOrEmpty(Model.SearchResult.Data.Results[0].Description))
                                {
                                    <p class="card-text">@Model.SearchResult.Data.Results[0].Description</p>
                                }
                                else
                                {
                                    <p class="card-text">No data available to display</p>
                                }
                            </div>
                            <div class="mt-4 mb-3 ml-1">
                                <h5 class="card-title">Comics <span>(@Model.SearchResult.Data.Results[0].Comics.Items.Count)</span></h5>
                                @if (Model.SearchResult.Data.Results[0].Comics != null && Model.SearchResult.Data.Results[0].Comics.Items.Count > 0)
                                {
                                    @foreach (var comic in Model.SearchResult.Data.Results[0].Comics.Items)
                                    {
                                        <p>@comic.Name</p>
                                    }
                                }
                                else
                                {
                                    <p class="card-text">No data available to display</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
